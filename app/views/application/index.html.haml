%h1 Welcome to the High Holidays at Oseh Shalom

-if @member
  #member_information
    %p
      %label Name:
      %span#first_name= @member.first_name
      %span#middle_name= @member.middle_name
      %span#last_name= @member.last_name

    %p
      %label Phone:
      %span#main_phone= @member.main_phone
    %p
      %label Email:
      %span#main_email= @member.main_email
-else

  #member_search
    = form_tag members_path, :method => :get do
      =label_tag 'member_query', "First, let's find out who you are.  Please type your name here ->"
      =text_field_tag 'member_query', nil, :placeholder => 'Rabbi Doug Heifetz'
      =button_tag 'Search'




