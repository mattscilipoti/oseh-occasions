!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Oseh Occasions"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body
    %nav.navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}Oseh Occasions
          .container-fluid.nav-collapse
            %ul.nav
              %li= link_to "Link 1", "/path1"
              %li= link_to "Link 2", "/path2"
              %li= link_to "Link 3", "/path3"

    #content.container-fluid
      .row-fluid
        .span3
          <!-- Sidebar content -->
          -#.well.sidebar-nav.accordion
            .accordion-group
              - upcoming_events = Event.upcoming(5)
              .accordion-heading
                %a.accordion-toggle{:data => {:target => 'tabs_for_upcoming_events', :toggle => 'collapse'}, :href => '#tabs_for_upcoming_events'}
                  Upcoming Events
              #tabs_for_upcoming_events.accordion-body.collapse.tabs-left
                %ul.nav.nav-tabs
                  - upcoming_events.each_with_index do |event, index|
                    -caption = "#{event.start_date.stamp("10/01")} | #{event.name.truncate(15)}"
                    %li{:class => ('active' if index==0)}= link_to caption, "#tab-#{event.name.parameterize}", :data => {:toggle => "tab"}


            = yield :left_side_bar

            .accordion-group
              .accordion-heading
                %a.accordion-toggle{:data => {:target => 'user_summary', :toggle => 'collapse'}, :href => '#user_summary'}
                  Your Info
              #user_summary.accordion-body.collapse.in
                -if @person
                  %hr
                  #person_summary
                    =render @person


        .span9
          <!-- main content -->
          =render 'layouts/flash_notification'
          = yield

      %footer
        %p &copy; 2012 Oseh Shalom
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
