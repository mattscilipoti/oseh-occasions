%h1
  People
  -unless @scopes.blank?
    Filtered by #{@scopes.inspect}

%table#people{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.person.full_name", :default => t("activerecord.labels.full_name", :default => "Full Name"))
      %th Main Phone
      %th Actions
  %tbody
    - @people.each do |person|
      %tr
        %td= person.id
        %td= person.full_name
        -#%td= link_to person.full_name, person_path(person)
        %td= person.main_phone
        %td
          = link_to "Show", '#' # person_path(person)

