%h1= event.name
%p= event.start_date

- related_events = event.children
- unless related_events.blank?
  %h3 Related Events
  %ul
    - related_events.each do |event|
      %li= link_to event.name, "#tab-#{event.name.parameterize}", :data => {:toggle => "tab"}

%hr
- unless current_person
  Please #{link_to "login", login_path} in order to RSVP.
- else
  %h3 Who will attend?
  = form_for event do |f|
    %table
      %thead
        %tr
          %th First Name
          %th Attending?
      %tbody
        - current_person.household.members.each do |person|
          %tr
            %td= person.first_name
            %td= check_box_tag "event[attendee_ids][]", person.id, person.attending?(event), :id => dom_id(person, :attending)
    = f.submit

